# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Java files
[*.java]
indent_size = 4

# YAML and YML files (Docker Compose, config files)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf
